<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="employee_view_tree" model="ir.ui.view">
            <field name="name">employee_view_tree</field>
            <field name="model">electron.employee</field>
            <field name="arch" type="xml">
                <tree string="employee_tree">
                    <field name="name"/>
                    <field name="age"/>
                    <field name="address"/>
                </tree>
            </field>
        </record>

        <record id="employee_view_form" model="ir.ui.view">
            <field name="name">employee_view_form</field>
            <field name="model">electron.employee</field>
            <field name="arch" type="xml">
                <form string="employee_form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                            <field name="address"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="employee_action" model="ir.actions.act_window">
            <field name="name">Employee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">electron.employee</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="employee_menu_act" name="Employee" parent="electron_partner_menu_categ" action="employee_action" sequence="20"/>

    </data>
</odoo>