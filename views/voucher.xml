<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="voucher_view_tree" model="ir.ui.view">
            <field name="name">voucher_view_tree</field>
            <field name="model">electron.voucher</field>
            <field name="arch" type="xml">
                <tree string="voucher_tree">
                    <field name="name"/>
                    <field name="percentage"/>
                </tree>
            </field>
        </record>

        <record id="voucher_view_form" model="ir.ui.view">
            <field name="name">voucher_view_form</field>
            <field name="model">electron.voucher</field>
            <field name="arch" type="xml">
                <form string="voucher_form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="percentage"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="voucher_action" model="ir.actions.act_window">
            <field name="name">Voucher</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">electron.voucher</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="voucher_menu_act" name="Voucher" parent="electron_promo_menu_categ" action="voucher_action" sequence="10"/>

    </data>
</odoo>